{
  "name": "node-ts-starter",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "start": "node dist/main.js",
    "dev": "tsx watch --env-file=.env src/main.ts",
    "lint": "eslint src/**/*.ts --fix",
    "test": "node  --import=tsx --test --experimental-test-coverage src/test/**/*.ts",
    "test:watch":"node  --import=tsx --test --watch src/test/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/platypus-vibe/node-ts-starter.git"
  },
  "keywords": [],
  "author": "Alex Semenov",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/platypus-vibe/node-ts-starter/issues"
  },
  "homepage": "https://github.com/platypus-vibe/node-ts-starter#readme",
  "description": "Node Typescript Starter",
  "devDependencies": {
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "@eslint/js": "^9.22.0",
    "@types/node": "^22.13.10",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^16.0.0",
    "typescript-eslint": "^8.26.1"
  }
}
